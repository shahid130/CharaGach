
<html>
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/CSS/adminLayout.css" asp-append-version="true" />
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'>

</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-lg ftco_navbar ftco-navbar-light" id="ftco-navbar">
            <div class="container">
                <a class="navbar-brand" href="index.html">Logo</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="fa fa-bars"></span> Menu
                </button>
                <div class="collapse navbar-collapse" id="ftco-nav">
                    <ul class="navbar-nav ml-auto mr-md-3">
                        <li class="nav-item active"><a asp-area="" asp-controller="Admin" asp-action="AdminHome" class="nav-link">Home</a></li>
                        <li class="nav-item"><a asp-area="" asp-controller="Admin" asp-action="AddPlant" class="nav-link">Add</a></li>
                        <li class="nav-item"><a asp-area="" asp-controller="Admin" asp-action="UpdatePlant" class="nav-link">Update </a></li>
                        <li class="nav-item"><a asp-area="" asp-controller="Admin" asp-action="NewOrder" class="nav-link">Orders</a></li>
                        <li class="nav-item"><a asp-area="" asp-controller="Admin" asp-action="DeliveredOrder" class="nav-link">Delivered</a></li>
                        <li class="nav-item"><a asp-area="" asp-controller="Admin" asp-action="adminProfile" class="nav-link"><i class="fa fa-user"></i></a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <div>
        @RenderBody()
    </div>


    <!-- ***** Footer Start ***** -->
    <footer style="text-align: center">
        <div class="col-lg-12">
            <div class="under-footer">
                <p>
                    Copyright © <span id="year"></span> Md. Shahid Hasan. All Rights Reserved.

                </p>
            </div>
        </div>
    </footer>
</body>
</html>

<script>
    document.getElementById("year").innerHTML = new Date().getFullYear();
</script>